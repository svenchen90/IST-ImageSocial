<!DOCTYPE html>
<script>
var loadProfile = function(){
	$.get('/getprofile', function(data){
		$("#profile_view").modal("show");
		for(var o in data){
			if(o == "birthday"){
				var date = new Date(data[o]);
				$("#profile_view [name=" + o + "]").text(date.getFullYear() + "-" + (date.getMonth()+1) + "-" + (date.getDate()+1));
			}else if(o == 'name'){
				$("#profile_view [name=first_name]").text(data[o].first);
				$("#profile_view [name=last_name]").text(data[o].last);
			}else
				$("#profile_view [name=" + o + "]").text(data[o]);
		}
	});
};
</script>


